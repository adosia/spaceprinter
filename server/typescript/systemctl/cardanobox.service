[Unit]
Description=CardanoBox
Requires=network.target

[Service]
Type=simple
TimeoutStartSec=10s
Restart=always
RestartSec=10
WorkingDirectory=/home/box/.cardanobox/app/
ExecStart=/home/box/.cardanobox/app/cardanobox
LimitNOFILE=500000
LimitNPROC=500000
User=box
Group=box

[Install]
WantedBy=default.target